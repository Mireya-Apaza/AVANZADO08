<!DOCTYPE html>
<html lang="en">
  <head>
    <title>CRUD de Usuarios</title>
    <style>
      .container {
        margin-bottom: 3%;
        margin-top: 3%;
      }
      .custom-bg {
        background-color: #a7c5bd;
        padding: 10px 0;
        color: white;
        font-weight: bold;
        border-radius: 12%;
        width: 50%;
        margin: 0 auto;
        margin-top: 2%;
      }
      .table {
        margin-top: 20px;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <img
        src="https://portafolio-personal-teal.vercel.app/assets/MireyaAPZ.png"
        width="100%"
        height="auto"
        alt="Banner"
      />
      <hr />
      <div class="custom-bg">
          <h1 class="text-center fw-semibold">CRUD de Usuarios</h1>
      </div>
    </header>
    <main>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <section>
              <h2>Crear Usuario</h2>
              <form action="/users" method="POST">
                <div class="mb-3">
                  <label for="name" class="form-label">Nombre:</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email:</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    required
                  />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Contrase√±a:</label>
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    required
                  />
                </div>
                <button type="submit" class="custom-bg">
                  Crear Usuario
                </button>
              </form>
            </section>
          </div>
          <div class="col-md-8">
            <section>
              <h2>Lista de Usuarios</h2>
              <table class="table table-striped text-center">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">CORREO</th>
                    <th scope="col">ACCIONES</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user, index) => { %>
                  <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td>
                      <a
                        class="btn text-success fw-bold"
                        href="/users/edit/<%= user._id %>"
                        >Editar</a
                      >
                      <a
                        class="btn text-danger fw-bold"
                        href="/users/delete/<%= user._id %>"
                        >Eliminar</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </section>
          </div>
        </div>
      </div>
      <% if (typeof errors !== 'undefined') { %>
        <div class="alert alert-danger">
          <% errors.forEach(error => { %>
            <p><%= error.msg %></p>
          <% }) %>
        </div>
      <% } %>
    </main>
  </body>
</html>